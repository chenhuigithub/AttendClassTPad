<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 弹框时背景阴影动画 -->
    <style name="DarkAnimation">
        <item name="android:windowEnterAnimation">@anim/dark_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dark_fade_out</item>
    </style>

    <!-- 弹框时背景阴影动画 -->
    <style name="MyDarkStyle">
        <item name="android:windowEnterAnimation">@anim/dark_in</item>
        <item name="android:windowExitAnimation">@anim/dark_out</item>
    </style>

    <!-- 弹框动画 -->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <declare-styleable name="Gallery1">
        <attr name="android:galleryItemBackground" />
    </declare-styleable>
    <declare-styleable name="LabelView">
        <attr name="text" format="string" />
        <attr name="textSize" format="dimension" />
    </declare-styleable>

    <!-- 绘制菜单栏显示风格 -->
    <style name="style_draw_menu" parent="@android:style/Theme.Dialog">
        <item name="@android:windowEnterAnimation">@anim/logout_dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/logout_dialog_exit</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:background">@android:color/transparent</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowNoTitle">false</item>
    </style>

    <!-- 自定义dialog样式 for loading -->
    <style name="DialogForLoading" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/shape_for_custom_dialog_for_loading</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="style_custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="@android:windowEnterAnimation">@anim/mylogout_dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/mylogout_dialog_exit</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:background">#ffffff</item>
        <!-- 设置自定义布局的背景透明 -->
        <item name="android:windowNoTitle">false</item>
    </style>


    <!-- 弹框式Activity展示样式 -->
    <style name="ActivityInOutAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:activityOpenEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_bottom_out</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <!-- 弹框式Activity展示样式 -->
    <style name="Theme.Android123" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg</item>
    </style>

    <!--实心小矩形-->
    <style name="SingBgForRectangle" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimen_padding_004</item>
        <item name="android:paddingBottom">@dimen/dimen_padding_004</item>
        <item name="android:paddingLeft">@dimen/dimen_padding_008</item>
        <item name="android:paddingRight">@dimen/dimen_padding_008</item>
    </style>

    <!--实心小矩形-->
    <style name="SingBgForRectangle02" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimen_padding_006</item>
        <item name="android:paddingBottom">@dimen/dimen_padding_006</item>
        <item name="android:paddingLeft">@dimen/dimen_padding_008</item>
        <item name="android:paddingRight">@dimen/dimen_padding_008</item>
    </style>

    <!-- 一般列表样式(点击时无原有黄色背景效果等) -->
    <style name="NormalList">
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:fadingEdgeLength">0dp</item>
        <item name="android:listSelector">#00000000</item>
    </style>

    <!-- 一般ListView列表样式 -->
    <style name="NormalLv" parent="@style/NormalList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@color/light_grey</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- 自定义对话框样式的dialog -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 视频进度条 -->
    <style name="Media_SeekBar" parent="android:Widget.SeekBar">
        <item name="android:progressDrawable">@drawable/rounded_rectangle</item>
        <item name="android:indeterminateDrawable">@drawable/rounded_rectangle</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
        <item name="android:thumb">@drawable/selector_for_seekbar_progress_pic</item>
        <item name="android:thumbOffset">10dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

</resources>
