<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_all_layout_aty_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF1F5"
    android:orientation="horizontal"
    android:paddingLeft="30dp"
    android:paddingTop="35dp"
    android:paddingRight="30dp"
    android:paddingBottom="35dp">

    <ImageView
        android:layout_width="0px"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@drawable/pic01" />

    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll01_layout_aty_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_logo01_layout_aty_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/logo02" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="授课系统"
                    android:textColor="#0A7CD1"
                    android:textSize="22sp" />
            </LinearLayout>


            <!-- 用户名/手机号/邮箱 -->

            <LinearLayout
                android:id="@+id/ll_user_name_layout_aty_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_for_gray_soild_corners"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="30dp"
                android:paddingBottom="10dp">

                <EditText
                    android:id="@+id/edt_user_name_layout_aty_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_for_edt"
                    android:hint="用户名/手机号/邮箱"
                    android:singleLine="true"
                    android:textColor="@color/color_text_content"
                    android:textColorHint="@color/color_text_additional"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 输入密码 -->

            <LinearLayout
                android:id="@+id/ll_password_layout_aty_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_user_name_layout_aty_login"
                android:layout_alignLeft="@id/ll_user_name_layout_aty_login"
                android:layout_alignRight="@id/ll_user_name_layout_aty_login"
                android:layout_marginTop="15dp"
                android:background="@drawable/selector_for_gray_soild_corners"
                android:clickable="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp">

                <EditText
                    android:id="@+id/edt_password_layout_aty_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_for_edt"
                    android:hint="输入密码"
                    android:singleLine="true"
                    android:textColor="@color/color_text_content"
                    android:textColorHint="@color/color_text_additional"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 选择框 -->

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_padding_006"
                android:background="@color/white"
                android:orientation="horizontal">

                <!-- 选择框 -->

                <RelativeLayout
                    android:id="@+id/rl_remember_layout_aty_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/white"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbox_remember_layout_aty_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_for_cbox"
                        android:button="@null"
                        android:scaleX="0.5"
                        android:scaleY="0.5" />

                    <TextView
                        android:id="@+id/tv_lbl_remember_layout_aty_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/cbox_remember_layout_aty_login"
                        android:text="记住密码"
                        android:textColor="@color/color_text_content"
                        android:textSize="12sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_lbl_help_layout_aty_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="使用帮助"
                    android:textColor="@color/color_text_content"
                    android:textSize="12sp" />
            </RelativeLayout>

            <!-- 登录按钮 -->

            <TextView
                android:id="@+id/tv_login_layout_aty_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_padding_008"
                android:background="@drawable/selector_for_login"
                android:paddingLeft="20dp"
                android:layout_marginLeft="@dimen/dimen_padding_003"
                android:paddingTop="5dp"
                android:paddingRight="20dp"
                android:paddingBottom="5dp"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- 蓝色短横条 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll01_layout_aty_login"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="20dp"
            android:gravity="bottom|right"
            android:visibility="visible">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="18dp"
                android:layout_height="5dp"
                android:background="#0A7CD1" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>