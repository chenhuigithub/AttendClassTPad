<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_paint_detail_layout_v_draw_menu"
    android:layout_width="100dp"
    android:layout_height="50dp"
    android:background="@drawable/bg_popup01"
    android:clickable="false"
    android:focusable="false"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <!-- 大小、粗细 -->


    <!-- <GridView -->
    <!-- android:id="@+id/gdv_size_layout_v_draw_menu" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_marginBottom="10dp" -->
    <!-- android:cacheColorHint="#00000000" -->
    <!-- android:columnWidth="1dp" -->
    <!-- android:fadingEdge="none" -->
    <!-- android:fadingEdgeLength="0dp" -->
    <!-- android:gravity="center" -->
    <!-- android:horizontalSpacing="1dp" -->
    <!-- android:listSelector="#00000000" -->
    <!-- android:numColumns="1" -->
    <!-- android:verticalSpacing="2dp" /> -->


    <!-- 细线条(圆形标志) -->

    <FrameLayout
        android:id="@+id/fl_small_paint_layout_v_draw_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:clickable="true" >

        <LinearLayout
            android:id="@+id/ll_small_paint_layout_v_draw_menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/grey"
            android:clickable="false"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/iv_small_paint_layout_v_draw_menu"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/eraser01" />
    </FrameLayout>

    <!-- 中等线条(圆形标志) -->

    <FrameLayout
        android:id="@+id/fl_middle_paint_layout_v_draw_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:clickable="true" >

        <LinearLayout
            android:id="@+id/ll_middle_paint_layout_v_draw_menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/grey"
            android:clickable="false"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/iv_middle_paint_layout_v_draw_menu"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/eraser01" />
    </FrameLayout>

    <!-- 粗线条 (圆形标志) -->

    <FrameLayout
        android:id="@+id/fl_large_paint_layout_v_draw_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:clickable="true" >

        <LinearLayout
            android:id="@+id/ll_large_paint_layout_v_draw_menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/grey"
            android:clickable="false"
            android:orientation="horizontal" >
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_large_paint_layout_v_draw_menu"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="5.5dp"
            android:layout_marginTop="5.5dp"
            android:background="@drawable/eraser01" />
    </FrameLayout>

</LinearLayout>