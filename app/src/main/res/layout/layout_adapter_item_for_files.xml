<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_all_layout_adapter_item_for_files"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="false"
    android:focusable="false">

    <!-- 标志（头像） -->

    <ImageView
        android:id="@+id/iv_logo_layout_adapter_item_for_files"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/file_unknown"
        android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_logo_layout_adapter_item_for_files"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginLeft="@dimen/dimen_padding_002"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_layout_adapter_item_for_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="数据分析表"
            android:textColor="@color/color_text_title"
            android:textSize="@dimen/dimen_text_007" />

        <!-- 中间文字说明 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_padding_004"
            android:paddingTop="4dp"
            android:paddingRight="@dimen/dimen_padding_004"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_size_layout_adapter_item_for_files"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.17M"
                    android:textColor="@color/color_text_content"
                    android:textSize="@dimen/dimen_text_006" />

                <TextView
                    android:id="@+id/tv_time_layout_adapter_item_for_files"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-10-09 13:25"
                    android:textColor="@color/color_text_content"
                    android:textSize="@dimen/dimen_text_006" />

                <!-- 右侧按钮：预览   共享 -->

                <LinearLayout
                    android:id="@+id/ll_menu_layout_adapter_item_for_files"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_preview_layout_adapter_item_for_files"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_padding_003"
                        android:text="预览"
                        android:textColor="@color/blue8"
                        android:textSize="@dimen/dimen_text_006" />

                    <View
                        android:layout_width="1.5dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dimen_padding_005"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/dimen_padding_005"
                        android:background="@color/blue8" />

                    <TextView
                        android:id="@+id/tv_share_layout_adapter_item_for_files"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dimen_padding_003"
                        android:visibility="gone"
                        android:text="共享"
                        android:textColor="@color/blue8"
                        android:textSize="@dimen/dimen_text_006" />
                </LinearLayout>

                <!--来源-->
                <TextView
                    android:id="@+id/tv_source_layout_adapter_item_for_files"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:focusable="false"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                </TextView>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>