<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_wrapper01_layout_activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/iv_user_logo_layout_fg_menu_login"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/user_logo"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_user_name_layout_fg_menu_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="王老师"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_text_007" />

    <Button
        android:id="@+id/btn_login_layout_fg_menu_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_for_white_stroke_corners"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_text_006" />

</LinearLayout>