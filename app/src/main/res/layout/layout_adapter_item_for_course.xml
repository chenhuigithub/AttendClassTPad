<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_all_layout_adapter_item_for_course"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical"
    android:padding="@dimen/dimen_padding_005">

    <TextView
        android:id="@+id/tv_unit_layout_adapter_item_for_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:text="第一单元"
        android:textColor="@color/color_text_content"
        android:textSize="@dimen/dimen_text_005" />


    <GridView
        android:id="@+id/gdv_catalog_layout_adapter_item_for_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_padding_006"
        android:cacheColorHint="#00000000"
        android:columnWidth="20dp"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:gravity="center|left"
        android:horizontalSpacing="@dimen/dimen_padding_005"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:scrollbars="none"
        android:verticalSpacing="0dp" />


</LinearLayout>