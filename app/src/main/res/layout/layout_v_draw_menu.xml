    <!-- 绘制菜单 -->

    <LinearLayout
        android:id="@+id/ll_menu_layout_v_draw_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/translucent"
        android:gravity="center"
        android:orientation="horizontal" >

        <!-- 画笔 -->

        <LinearLayout
            android:id="@+id/ll_paint_brush_layout_v_draw_menu"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_menu_item_p"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/paint_brush02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="画笔"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 隔离线 -->

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey02" />

        <!-- 橡皮 -->

        <LinearLayout
            android:id="@+id/ll_eraser_layout_v_draw_menu"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/translucent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/eraser" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_padding_005"
                android:text="橡皮"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 隔离线 -->

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey02" />

        <!-- 撤销 -->

        <LinearLayout
            android:id="@+id/ll_revoke_layout_v_draw_menu"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/translucent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/revoke" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_padding_005"
                android:text="撤销"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 隔离线 -->

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey02" />

        <!-- 恢复 -->

        <LinearLayout
            android:id="@+id/ll_recovery_layout_v_draw_menu"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/translucent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/redo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_padding_005"
                android:text="恢复"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 隔离线 -->

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey02" />

        <!-- 清屏 -->

        <LinearLayout
            android:id="@+id/ll_clear_screen_layout_v_draw_menu"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/translucent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/clear_screen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_padding_005"
                android:text="清屏"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 隔离线 -->

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey02" />

        <!-- 白板 -->

        <LinearLayout
            android:id="@+id/ll_white_board_layout_v_draw_menu"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/translucent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/white_board02" />

            <TextView
                android:id="@+id/tv_white_board_layout_v_draw_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_padding_005"
                android:text="白板"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 隔离线 -->

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey02" />

        <!-- 退出全屏 -->

        <LinearLayout
            android:id="@+id/ll_exit_full_screen02_layout_v_draw_menu"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/translucent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp" >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/exit_full_screen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_padding_005"
                android:text="退出全屏"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 隔离线 -->

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/grey02" />

        <!-- 退出菜单栏 -->

        <LinearLayout
            android:id="@+id/ll_exit_layout_v_draw_menu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/translucent"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp" >

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/menu"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>